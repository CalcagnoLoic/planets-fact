---
import { Icons } from "../icons/Icons";

const tabs = ["overview", "structure", "surface"];
let selectedTab = tabs[0];

const tabsDesktop = ["overview", "internal structure", "surface geology"];
let selectedTabDesktop = tabsDesktop[0];

const { planet, activeColor, colorTab } = Astro.props;
---

<section>
  <article
    class="flex content-around justify-between border-b-[1px] border-b-brightGray py-5 text-xs font-bold uppercase tracking-widest text-brightGray md:hidden"
  >
    {
      tabs.map((tab) => (
        <div class="cursor-pointer">
          <span
            class={`${
              selectedTab === tab
                ? `border-b-4 ${colorTab} pb-4 text-white`
                : ""
            }`}
          >
            {tab}
          </span>
        </div>
      ))
    }
  </article>

  <article class="flex flex-col items-center xl:flex-row xl:justify-around">
    <div class="xl:w-2/3">
      <img
        src={planet?.images.planet}
        alt={`${planet?.name} Planet`}
        class={`mt-[95px] xl:mx-auto ${planet?.size}`}
      />
    </div>

    <div class="mt-24 flex justify-around xl:mt-0 xl:w-1/3 xl:flex-col">
      <div class="text-white md:w-1/2 xl:w-full">
        <h1
          class="text-center font-antonio text-5xl font-bold uppercase xl:mt-28 xl:text-start xl:text-6xl"
        >
          {planet?.name}
        </h1>
        <p class="mt-4 text-center md:mt-6 md:text-start">
          {planet?.overview.content}
        </p>
        <div class="flex justify-center gap-4 md:justify-start">
          <p class="mt-8 opacity-70">
            Source: <a
              href={planet?.overview.source}
              target="_blank"
              class="font-bold underline">Wikipedia</a
            >
          </p>

          <Icons kind="src" />
        </div>
      </div>

      <div
        class="hidden grid-cols-1 gap-4 md:ml-8 md:mt-14 md:grid md:w-1/2 xl:ml-0 xl:mt-9 xl:w-full"
      >
        {
          tabsDesktop.map((tab, index) => (
            <span
              class={` cursor-pointer border-2 border-brightGray px-7 py-3 font-bold hover:border-transparent ${selectedTabDesktop === tab ? `${activeColor} border-transparent hover:${activeColor}` : "hover:bg-hurricane duration-300 ease-in-out"}`}
            >
              <span class="text-white opacity-50">
                {(index + 1).toString().padStart(2, "0")}
              </span>
              <span class="ml-7 font-bold uppercase text-white">{tab}</span>
            </span>
          ))
        }
      </div>
    </div>
  </article>
</section>
