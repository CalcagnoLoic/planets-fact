---
import { Icons } from "../icons/Icons";

const { planet } = Astro.props;
---

<div class="flex flex-col items-center xl:flex-row xl:justify-around">
  <div class="xl:w-2/3">
    <img
      src={planet?.images.planet}
      alt="Mercury Planet"
      class={`mt-[95px] xl:mx-auto ${planet?.size}`}
    />
  </div>
  <div class="text-white xl:w-1/3">
    <h1
      class="text-center font-antonio text-5xl font-bold uppercase xl:text-start xl:text-6xl"
    >
      {planet?.name}
    </h1>
    <p class="mt-4 text-center md:mt-6 md:text-start">
      {planet?.overview.content}
    </p>
    <div class="flex gap-4">
      <p class="mt-8 opacity-70">
        Source: <a
          href={planet?.overview.source}
          target="_blank"
          class="font-bold underline">Wikipedia</a
        >
      </p>

      <Icons kind="src" />
    </div>
  </div>
</div>
