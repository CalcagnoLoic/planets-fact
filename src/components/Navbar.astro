---
import { Icons } from "../icons/Icons";

const name_planet: Array<string> = [
  "Mercury",
  "Venus",
  "Earth",
  "Mars",
  "Jupiter",
  "Saturn",
  "Uranus",
  "Neptune",
];
---

<div class="self-center">
  <div class="hidden gap-8 font-bold md:flex">
    {
      name_planet.map((item) => (
        <a
          class="cursor-pointer uppercase text-white"
          href={`/space-fact/${item === "Mercury" ? "" : item}`}
        >
          {item}
        </a>
      ))
    }
  </div>

  <Icons kind="menu" />
</div>
