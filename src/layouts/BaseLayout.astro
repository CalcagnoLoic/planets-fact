---
import "../../src/style/index.css";

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const { pageTitle } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{pageTitle}</title>
    <link rel="shortcut icon" href="public/favicon.svg" type="image/x-icon" />
  </head>
  <body class="bg-stars bg-blackPearl h-screen flex flex-col justify-between">
    <header class="border-b-[1px] border-b-white">
      <Header />
    </header>

    <main class="mx-auto">
      <slot />
    </main>

    <Footer />

    <script src="../scripts/menu.ts"></script>
  </body>
</html>
